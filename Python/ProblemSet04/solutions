class Person:

    def getGender(self):
        return ""

class Male(Person):

    def getGender(self):
        return "Male"

class Female(Person):

    def getGender(self):
        return "Female"



obj1=Male()
print obj1.getGender()
obj2=Female()
print obj2.getGender()


